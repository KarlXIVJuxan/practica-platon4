<Window x:Class="platon4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:platon4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,255,0,-6">
        <Button Content="Изменить цвет" HorizontalAlignment="Left" Margin="0,28,0,0" VerticalAlignment="Top" Height="25" Width="400" Click="Button_Click"/>
        <Button Content="Изменить имя" HorizontalAlignment="Left" Margin="400,28,0,0" VerticalAlignment="Top" Width="400" Height="25" Click="Button_Click_1"/>
        <TextBox x:Name="ColorTextBox" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Название цвета" VerticalAlignment="Top" Width="400" Height="28"/>
        <TextBox x:Name="HumanTextBox" HorizontalAlignment="Left" Margin="400,0,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Width="400" Height="28"/>
        <DataGrid x:Name="ColourDgr" Margin="0,-255,400,292"/>
        <DataGrid x:Name="HumanDgr" Margin="400,-255,0,292"/>
    </Grid>
</Window>
